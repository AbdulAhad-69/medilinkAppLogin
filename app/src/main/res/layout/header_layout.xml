<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/nav_header_gradient"
    android:padding="24dp"
    android:theme="@style/ThemeOverlay.Material3.Dark">

    <!-- App Logo and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_notes_24"
                android:tint="@color/primary_500" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MediLink"
                android:textAppearance="@style/TextAppearance.MedilinkAppLogin.TitleLarge"
                android:textColor="@color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Health Companion"
                android:textAppearance="@style/TextAppearance.MedilinkAppLogin.BodySmall"
                android:textColor="@color/white"
                android:alpha="0.8" />

        </LinearLayout>

    </LinearLayout>

    <!-- User Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_account_circle_24"
                android:tint="@color/primary_500" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/navUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textAppearance="@style/TextAppearance.MedilinkAppLogin.TitleMedium"
                android:textColor="@color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john.doe@example.com"
                android:textAppearance="@style/TextAppearance.MedilinkAppLogin.BodySmall"
                android:textColor="@color/white"
                android:alpha="0.8" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/navUserBloodGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/error_500"
                    app:chipMinHeight="24dp"
                    app:chipMinTouchTargetSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textColor="@color/white"
                    android:alpha="0.6"
                    android:layout_marginHorizontal="8dp" />

                <TextView
                    android:id="@+id/navUserDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhaka"
                    android:textAppearance="@style/TextAppearance.MedilinkAppLogin.BodySmall"
                    android:textColor="@color/white"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>