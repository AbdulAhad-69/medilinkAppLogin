<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface_primary"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Medicine Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/primary_50">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_medication_24"
                android:tint="@color/primary_500" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Medicine Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medicineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol 500mg"
                android:textAppearance="@style/TextAppearance.MedilinkAppLogin.TitleMedium"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/medicineGeneric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generic: Acetaminophen"
                android:textAppearance="@style/TextAppearance.MedilinkAppLogin.BodySmall"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/medicineManufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer: ABC Pharma"
                android:textAppearance="@style/TextAppearance.MedilinkAppLogin.BodySmall"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <!-- Price and Availability -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/medicinePrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="à§³ 5.00"
                    android:textAppearance="@style/TextAppearance.MedilinkAppLogin.TitleSmall"
                    android:textColor="@color/primary_500"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/availabilityChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Stock"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/success_500"
                    app:chipMinHeight="24dp"
                    app:chipMinTouchTargetSize="24dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="12sp"
            android:textAllCaps="false"
            app:icon="@drawable/baseline_arrow_forward_24"
            app:iconSize="16dp"
            app:cornerRadius="12dp"
            android:layout_marginStart="8dp"
            style="@style/Widget.MedilinkAppLogin.Button.Outlined" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>