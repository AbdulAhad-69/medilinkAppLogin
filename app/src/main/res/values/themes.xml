<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MedilinkAppLogin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_100</item>
        <item name="colorOnPrimaryContainer">@color/primary_900</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_100</item>
        <item name="colorOnSecondaryContainer">@color/secondary_900</item>
        
        <!-- Tertiary brand colors -->
        <item name="colorTertiary">@color/tertiary_500</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/tertiary_100</item>
        <item name="colorOnTertiaryContainer">@color/tertiary_900</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_500</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_50</item>
        <item name="colorOnErrorContainer">@color/error_700</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_secondary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Background colors -->
        <item name="colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/neutral_300</item>
        <item name="colorOutlineVariant">@color/neutral_200</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary_700</item>
        <item name="android:navigationBarColor">@color/surface_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.MedilinkAppLogin.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.MedilinkAppLogin.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.MedilinkAppLogin.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.MedilinkAppLogin.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.MedilinkAppLogin.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.MedilinkAppLogin.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.MedilinkAppLogin.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.MedilinkAppLogin.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.MedilinkAppLogin.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.MedilinkAppLogin.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.MedilinkAppLogin.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.MedilinkAppLogin.LabelSmall</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.MedilinkAppLogin.Button</item>
        <item name="textInputStyle">@style/Widget.MedilinkAppLogin.TextInputLayout</item>
        <item name="cardViewStyle">@style/Widget.MedilinkAppLogin.CardView</item>
    </style>

    <style name="Theme.MedilinkAppLogin" parent="Base.Theme.MedilinkAppLogin" />
    
    <!-- Typography Styles -->
    <style name="TextAppearance.MedilinkAppLogin.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.MedilinkAppLogin.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <!-- Component Styles -->
    <style name="Widget.MedilinkAppLogin.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/primary_500</item>
    </style>
    
    <style name="Widget.MedilinkAppLogin.Button.Secondary" parent="Widget.MedilinkAppLogin.Button">
        <item name="backgroundTint">@color/secondary_500</item>
    </style>
    
    <style name="Widget.MedilinkAppLogin.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/primary_500</item>
    </style>
    
    <style name="Widget.MedilinkAppLogin.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_500</item>
        <item name="hintTextColor">@color/primary_500</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
    
    <style name="Widget.MedilinkAppLogin.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_primary</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Custom styles for specific components -->
    <style name="Widget.MedilinkAppLogin.SearchBar" parent="Widget.Material3.SearchBar">
        <item name="android:background">@color/surface_primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">2dp</item>
    </style>
    
    <style name="Widget.MedilinkAppLogin.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary_500</item>
        <item name="tint">@color/white</item>
        <item name="borderWidth">0dp</item>
    </style>
</resources>